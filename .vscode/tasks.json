{
	"version": "0.1.0",
	"command": "tsc",
	"isShellCommand": true,
	"showOutput": "silent",
	"tasks": [	
		{
			"taskName": "build",
			"isBuildCommand": true,
			"suppressTaskName": true,
			"problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"isWatching": true,
			"suppressTaskName": true,
			"args": [
				"-w",
			],
			"problemMatcher": "$tsc"
		}
	]
}