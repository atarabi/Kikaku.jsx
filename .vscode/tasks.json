{
	"version": "0.1.0",
	"command": "tsc",
	"isShellCommand": true,
	"showOutput": "always",
	"tasks": [	
		{
			"taskName": "build",
			"isBuildCommand": true,
			"suppressTaskName": true,
			"args": [
				"src/Kikaku.ts",
				"-d",
				"--out", "dest/Kikaku.jsx",
				"-t", "es3",
				"-noLib"
			],
			"problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"isWatching": true,
			"suppressTaskName": true,
			"args": [
				"src/Kikaku.ts",
				"-d",
				"-w",
				"--out", "dest/Kikaku.jsx",
				"-t", "es3",
				"-noLib"
			],
			"problemMatcher": "$tsc"
		}
	]
}